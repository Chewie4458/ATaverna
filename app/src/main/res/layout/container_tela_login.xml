<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container_tela_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

  <ImageView
      android:id="@+id/bkgTelaPrincipal"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:srcCompat="@drawable/container_ranking_rectangle" />

  <ImageView
      android:id="@+id/image_design_sem_nome"
      android:layout_width="0dp"
      android:layout_height="300dp"
      android:scaleType="centerInside"
      android:src="@drawable/image_design_sem_nome"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.35000002" />

  <Button
      android:id="@+id/btnLogin"
      android:layout_width="wrap_content"
      android:layout_height="50dp"
      android:layout_marginTop="64dp"
      android:backgroundTint="#DADADA"
      android:fontFamily="@font/gemunu_libre_bold"
      android:text="Login com Google"
      android:textAllCaps="false"
      android:textColor="@color/black"
      android:textSize="16sp"
      app:icon="@drawable/image_google"
      app:iconPadding="8dp"
      app:iconSize="24dp"
      app:iconTint="@color/white"
      app:iconTintMode="multiply"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/image_design_sem_nome" />
</androidx.constraintlayout.widget.ConstraintLayout>
